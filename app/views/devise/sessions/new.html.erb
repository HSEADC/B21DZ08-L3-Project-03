<div class="SO_FormNew">
  <div class="A_FormPaddings U_Top"></div>
  <div class="A_FormBackground">
    <img src="/uploads/formLeftLine.svg" alt="" style="position: absolute; left: 0;">
    <img src="/uploads/formRightLine.svg" alt="" style="position: absolute; right: 0;"></div>
  <div class="A_FormPaddings U_Bottom"></div>
  <div class="O_LoginForm">
    <h1 class="A_FormTitle">Вход</h1>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'O_NewForm' }) do |f| %>
      <div class="field">
        <p class="A_FormLabel">Почта</p>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"A_Input", placeholder: "example@email.com" %>
      </div>
      <div class="field">
        <p class="A_FormLabel">Пароль</p>
        <%= f.password_field :password, autocomplete: "current-password", class:"A_Input", placeholder: "• • • • • •" %>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Забыли пароль?", new_password_path(resource_name) %>
        <% end %>
      </div>
      <div>
        <%= f.submit "Войти", class:'A_ButtonLink U_Gradient U_NoIcon' %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
  <% content_for :custom_footer do %>
    <%= render 'fixed_footer' %>
  <% end %>
</div>
