<div class="post" id="<%= dom_id post %>">
    <p>
    <strong>Профиль с ID:</strong>
    <%= post.profile_id %>
  </p>
  
  <p>
    <strong>Пост:</strong>
    <%= post.post_name %>
  </p>

  <p>
    <%# image_tag post.pic.url, width: 300 %>
  </p>

  <p>
    <strong>Описание:</strong>
    <%= post.description %>
  </p>

  <p>
    <strong>Ссылка:</strong>
    <%= post.link %>
  </p>

</div>

<div>
  <%= link_to "Edit this post", edit_profile_post_path(@profile, post) %>
  <%= button_to "Destroy this post", [@profile, post], method: :delete %>
</div>
