<div id="<%= dom_id post %>">
  <p>
    <strong>Post:</strong>
    <%= post.post_id %>
  </p>

  <p>
    <strong>Post name:</strong>
    <%= post.post_name %>
  </p>

  <p>
    <strong>Pic:</strong>
    <%= post.pic %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= post.description %>
  </p>

  <p>
    <strong>Link:</strong>
    <%= post.link %>
  </p>

</div>
