  <h2><%= figma_post.description %></h2>
  <iframe style="border: 1px solid rgba(0, 0, 0, 0.1);" width="800" height="450" src="https://www.figma.com/embed?embed_host=share&url=<%= figma_post.link %>" allowfullscreen></iframe>
</div>
